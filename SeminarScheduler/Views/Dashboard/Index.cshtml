@{
    ViewData["Title"] = "Dashboard";
}

<div class="container-fluid">
    <div class="row mb-4">
        <div class="col-md-12">
            <h2>Welcome, @User.Identity.Name!</h2>
            <p class="lead">Here's an overview of the seminar scheduling system.</p>
        </div>
    </div>

    <!-- Stats Cards - Quick overview of system status -->
    <div class="row mb-4">
        <div class="col-md-3">
            <div class="card bg-primary text-white shadow">
                <div class="card-body">
                    <h5 class="card-title">Total Seminars</h5>
                    <h2 class="display-4">24</h2>
                    <p>Current semester</p>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card bg-success text-white shadow">
                <div class="card-body">
                    <h5 class="card-title">Faculty Assigned</h5>
                    <h2 class="display-4">18</h2>
                    <p>Out of 20 faculty members</p>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card bg-warning text-white shadow">
                <div class="card-body">
                    <h5 class="card-title">Pending Conflicts</h5>
                    <h2 class="display-4">3</h2>
                    <p>Requires attention</p>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card bg-info text-white shadow">
                <div class="card-body">
                    <h5 class="card-title">Room Utilization</h5>
                    <h2 class="display-4">78%</h2>
                    <p>Average usage</p>
                </div>
            </div>
        </div>
    </div>

    <!-- Recent Activity and Calendar Preview -->
    <div class="row">
        <div class="col-md-6">
            <div class="card shadow mb-4">
                <div class="card-header bg-primary text-white">
                    <h5 class="m-0">Recent Activity</h5>
                </div>
                <div class="card-body">
                    <div class="list-group">
                        <a href="#" class="list-group-item list-group-item-action">
                            <div class="d-flex w-100 justify-content-between">
                                <h5 class="mb-1">New seminar added: CS101</h5>
                                <small>2 hours ago</small>
                            </div>
                            <p class="mb-1">Introduction to Programming seminar was added to the schedule.</p>
                        </a>
                        <a href="#" class="list-group-item list-group-item-action">
                            <div class="d-flex w-100 justify-content-between">
                                <h5 class="mb-1">Conflict resolved: ENG202</h5>
                                <small>5 hours ago</small>
                            </div>
                            <p class="mb-1">Time conflict with core curriculum resolved.</p>
                        </a>
                        <a href="#" class="list-group-item list-group-item-action">
                            <div class="d-flex w-100 justify-content-between">
                                <h5 class="mb-1">Faculty assignment updated</h5>
                                <small>1 day ago</small>
                            </div>
                            <p class="mb-1">Dr. Smith assigned to MATH101 seminar.</p>
                        </a>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-6">
            <div class="card shadow mb-4">
                <div class="card-header bg-primary text-white">
                    <h5 class="m-0">Calendar Preview</h5>
                </div>
                <div class="card-body">
                    <div id="calendar-preview" style="height: 300px;"></div>
                </div>
                <div class="card-footer">
                    <a href="@Url.Action("Calendar", "Dashboard")" class="btn btn-primary btn-sm">View Full Calendar</a>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <!-- Include FullCalendar script -->
    <script src="https://cdn.jsdelivr.net/npm/fullcalendar@5.10.1/main.min.js"></script>
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            var calendarEl = document.getElementById('calendar-preview');
            var calendar = new FullCalendar.Calendar(calendarEl, {
                initialView: 'dayGridWeek',
                headerToolbar: {
                    left: '',
                    center: 'title',
                    right: ''
                },
                events: [
                    {
                        title: 'CS101: Intro to Programming',
                        start: '2025-04-02T10:00:00',
                        end: '2025-04-02T11:30:00',
                        backgroundColor: '#4e73df'
                    },
                    {
                        title: 'MATH101: Calculus Seminar',
                        start: '2025-04-03T13:00:00',
                        end: '2025-04-03T14:30:00',
                        backgroundColor: '#1cc88a'
                    },
                    {
                        title: 'ENG202: Writing Workshop',
                        start: '2025-04-04T09:00:00',
                        end: '2025-04-04T10:30:00',
                        backgroundColor: '#f6c23e'
                    }
                ],
                height: '100%'
            });
            calendar.render();
        });
    </script>
}