@page
@model SeminarScheduler.Views.Home.FacultyModel
@{
	ViewData["Title"] = "Faculty";
}

<div class="container-fluid">
    <div class="row mb-4">
        <div class="col-md-12">
            <div class="d-flex justify-content-between align-items-center">
                <h2>Faculty Management</h2>
                <button class="btn btn-primary" data-toggle="modal" data-target="#addFacultyModal">
                    <i class="fas fa-plus"></i> Add Faculty
                </button>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-md-12">
            <div class="card shadow mb-4">
                <div class="card-header bg-primary text-white">
                    <h5 class="m-0">Faculty List</h5>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-bordered" id="facultyTable" width="100%" cellspacing="0">
                            <thead>
                                <tr>
                                    <th>ID</th>
                                    <th>Name</th>
                                    <th>Department</th>
                                    <th>Email</th>
                                    <th>Current Workload</th>
                                    <th>Max Workload</th>
                                    <th>Status</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <td>F001</td>
                                    <td>Dr. John Smith</td>
                                    <td>Computer Science</td>
                                    <td>john.smith@university.edu</td>
                                    <td>3 courses</td>
                                    <td>4 courses</td>
                                    <td><span class="badge badge-success">Available</span></td>
                                    <td>
                                        <button class="btn btn-sm btn-primary">Edit</button>
                                        <button class="btn btn-sm btn-info">View Schedule</button>
                                    </td>
                                </tr>
                                <tr>
                                    <td>F002</td>
                                    <td>Dr. Emily Johnson</td>
                                    <td>Mathematics</td>
                                    <td>emily.johnson@university.edu</td>
                                    <td>4 courses</td>
                                    <td>4 courses</td>
                                    <td><span class="badge badge-danger">Full Workload</span></td>
                                    <td>
                                        <button class="btn btn-sm btn-primary">Edit</button>
                                        <button class="btn btn-sm btn-info">View Schedule</button>
                                    </td>
                                </tr>
                                <tr>
                                    <td>F003</td>
                                    <td>Prof. Michael Williams</td>
                                    <td>English</td>
                                    <td>michael.williams@university.edu</td>
                                    <td>2 courses</td>
                                    <td>3 courses</td>
                                    <td><span class="badge badge-success">Available</span></td>
                                    <td>
                                        <button class="btn btn-sm btn-primary">Edit</button>
                                        <button class="btn btn-sm btn-info">View Schedule</button>
                                    </td>
                                </tr>
                                <tr>
                                    <td>F004</td>
                                    <td>Dr. Sarah Brown</td>
                                    <td>History</td>
                                    <td>sarah.brown@university.edu</td>
                                    <td>1 course</td>
                                    <td>3 courses</td>
                                    <td><span class="badge badge-success">Available</span></td>
                                    <td>
                                        <button class="btn btn-sm btn-primary">Edit</button>
                                        <button class="btn btn-sm btn-info">View Schedule</button>
                                    </td>
                                </tr>
                                <tr>
                                    <td>F005</td>
                                    <td>Dr. Robert Davis</td>
                                    <td>Physics</td>
                                    <td>robert.davis@university.edu</td>
                                    <td>3 courses</td>
                                    <td>4 courses</td>
                                    <td><span class="badge badge-success">Available</span></td>
                                    <td>
                                        <button class="btn btn-sm btn-primary">Edit</button>
                                        <button class="btn btn-sm btn-info">View Schedule</button>
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-md-6">
            <div class="card shadow mb-4">
                <div class="card-header bg-primary text-white">
                    <h5 class="m-0">Department Workload Distribution</h5>
                </div>
                <div class="card-body">
                    <canvas id="departmentChart" width="400" height="300"></canvas>
                </div>
            </div>
        </div>
        <div class="col-md-6">
            <div class="card shadow mb-4">
                <div class="card-header bg-primary text-white">
                    <h5 class="m-0">Faculty Availability Overview</h5>
                </div>
                <div class="card-body">
                    <canvas id="availabilityChart" width="400" height="300"></canvas>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Add Faculty Modal -->
<div class="modal fade" id="addFacultyModal" tabindex="-1" role="dialog" aria-labelledby="addFacultyModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header bg-primary text-white">
                <h5 class="modal-title" id="addFacultyModalLabel">Add New Faculty</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form>
                    <div class="form-group">
                        <label>Name</label>
                        <input type="text" class="form-control" placeholder="Full Name">
                    </div>
                    <div class="form-group">
                        <label>Department</label>
                        <select class="form-control">
                            <option>Computer Science</option>
                            <option>Mathematics</option>
                            <option>English</option>
                            <option>History</option>
                            <option>Physics</option>
                        </select>
                    </div>
                    <div class="form-group">
                        <label>Email</label>
                        <input type="email" class="form-control" placeholder="email@university.edu">
                    </div>
                    <div class="form-group">
                        <label>Phone</label>
                        <input type="text" class="form-control" placeholder="(555) 123-4567">
                    </div>
                    <div class="form-group">
                        <label>Maximum Workload (Courses)</label>
                        <select class="form-control">
                            <option>1</option>
                            <option>2</option>
                            <option>3</option>
                            <option selected>4</option>
                            <option>5</option>
                        </select>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-primary">Save Faculty</button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script>
        // Initialize DataTable for better sorting and searching
        $(document).ready(function() {
            $('#facultyTable').DataTable();

            // Department workload chart
            var deptCtx = document.getElementById('departmentChart').getContext('2d');
            var departmentChart = new Chart(deptCtx, {
                type: 'bar',
                data: {
                    labels: ['Computer Science', 'Mathematics', 'English', 'History', 'Physics'],
                    datasets: [{
                        label: 'Assigned Courses',
                        data: [12, 8, 6, 5, 7],
                        backgroundColor: [
                            'rgba(78, 115, 223, 0.8)',
                            'rgba(28, 200, 138, 0.8)',
                            'rgba(246, 194, 62, 0.8)',
                            'rgba(54, 185, 204, 0.8)',
                            'rgba(231, 74, 59, 0.8)'
                        ],
                        borderWidth: 1
                    }]
                },
                options: {
                    scales: {
                        y: {
                            beginAtZero: true
                        }
                    }
                }
            });

            // Faculty availability chart
            var availCtx = document.getElementById('availabilityChart').getContext('2d');
            var availabilityChart = new Chart(availCtx, {
                type: 'pie',
                data: {
                    labels: ['Available', 'Full Workload', 'On Leave'],
                    datasets: [{
                        label: 'Faculty Status',
                        data: [12, 4, 2],
                        backgroundColor: [
                            'rgba(28, 200, 138, 0.8)',
                            'rgba(231, 74, 59, 0.8)',
                            'rgba(246, 194, 62, 0.8)'
                        ],
                        borderWidth: 1
                    }]
                }
            });
        });
    </script>
}
