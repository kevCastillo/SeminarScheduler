@{
    ViewData["Title"] = "Home Page";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-10 text-center">
            <div class="mt-5 mb-5">
                <h1 class="display-4">Welcome to Seminar Schedule Organizer</h1>
                <p class="lead">Simplify your academic scheduling with our comprehensive seminar management system.</p>
            </div>
        </div>
    </div>

    <div class="row mb-5">
        <div class="col-md-4">
            <div class="card shadow h-100">
                <div class="card-body text-center">
                    <i class="fas fa-calendar-alt fa-4x mb-3 text-primary"></i>
                    <h3 class="card-title">Smart Scheduling</h3>
                    <p class="card-text">Automatically detect and prevent conflicts between seminars and core curriculum classes.</p>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card shadow h-100">
                <div class="card-body text-center">
                    <i class="fas fa-users fa-4x mb-3 text-primary"></i>
                    <h3 class="card-title">Faculty Management</h3>
                    <p class="card-text">Efficiently manage faculty teaching assignments while respecting availability constraints.</p>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card shadow h-100">
                <div class="card-body text-center">
                    <i class="fas fa-chart-bar fa-4x mb-3 text-primary"></i>
                    <h3 class="card-title">Real-time Analytics</h3>
                    <p class="card-text">Generate comprehensive reports showing course distributions and scheduling metrics.</p>
                </div>
            </div>
        </div>
    </div>

    <div class="row mt-5 mb-5">
        <div class="col-md-6">
            <h2>Why Choose Our Scheduler?</h2>
            <ul class="list-group list-group-flush">
                <li class="list-group-item"><i class="fas fa-check text-success mr-2"></i> Prevents scheduling conflicts automatically</li>
                <li class="list-group-item"><i class="fas fa-check text-success mr-2"></i> Optimizes room usage and faculty workload</li>
                <li class="list-group-item"><i class="fas fa-check text-success mr-2"></i> Ensures even distribution of seminars</li>
                <li class="list-group-item"><i class="fas fa-check text-success mr-2"></i> Saves administrative time and reduces errors</li>
                <li class="list-group-item"><i class="fas fa-check text-success mr-2"></i> Improves overall academic experience</li>
            </ul>
        </div>
        <div class="col-md-6">
            <div class="card shadow">
                <div class="card-header bg-primary text-white">
                    <h5 class="m-0">Get Started Today</h5>
                </div>
                <div class="card-body">
                    <p>Sign in to access all features or request a demo of our Seminar Schedule Organizer.</p>
                    <div class="text-center mt-4">
                        <a href="/Identity/Account/Login" class="btn btn-primary btn-lg mr-2">Sign In</a>
                        <a href="/Identity/Account/Register" class="btn btn-outline-primary btn-lg">Register</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>